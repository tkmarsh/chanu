<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView android:id="@+id/title"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:minHeight="64dp"
              android:paddingLeft="16dip"
              android:paddingRight="16dip"
              android:textColor="@color/blue_base"
              android:textSize="22dp"
              android:text="@string/web_image_search_title"
              android:gravity="center_vertical|left" />
    <View android:id="@+id/titleDivider"
          android:layout_width="match_parent"
          android:layout_height="2dip"
          android:background="@color/blue_base" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
            >

        <EditText
                android:id="@+id/text"
                style="@style/PostReplyEditText"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_toLeftOf="@+id/button"
                android:hint="@string/web_image_search_text_hint"
                android:inputType="textAutoComplete"
                android:imeOptions="actionSearch"
                android:imeActionLabel="@string/search_title"
                android:maxLength="255"
                >
        </EditText>

    </RelativeLayout>

</LinearLayout>
